{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    {% if student == null %}
    <p>Object is not found.<p>
    {% else %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ student.Name }}</td>
            </tr>
            <tr>
                <th>Dob</th>
                <td>{{ student.Dob ? student.Dob|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PhoneNum</th>
                <td>{{ student.PhoneNum }}</td>
            </tr>
        </tbody>
    </table>
    {% endif %}

    <a href="{{ path('app_student_index') }}">back to list</a>

{% endblock %}
